source 'http://rubygems.org'

ruby '3.3.5'

gem 'rails', '~> 8.0'
gem 'rails_12factor'
gem 'thin'
gem 'mongo'
gem 'mongoid', git: "https://github.com/mongodb/mongoid"
gem "moped"
gem 'bson_ext'
gem 'nokogiri'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

# Javascript libs
gem 'jquery-rails'
gem 'modernizr-rails'

group :test, :development do
  gem 'rubocop'
end
