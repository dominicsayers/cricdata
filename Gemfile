source 'http://rubygems.org'

gem 'rails'
gem 'mongoid'
gem 'bson_ext'
gem 'nokogiri'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

# Needed only for non-Windows environments
platform :ruby do
  gem 'execjs'
end

# JavasScript libs
gem 'jquery-rails'
gem 'modernizr-rails'

group :test do
  # Pretty printed test output
  gem 'turn', :require => false
end

